{
  "include": ["./ejercicio/js/**/*.js"],
  "exclude": ["node_modules", "**/_hidden/**"],

  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,

    "noEmit": true,

    "module": "ES2022",
    "target": "ES2022",

    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
